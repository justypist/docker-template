{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "shell",
      "command": "docker build -t docker-template:latest . && docker run -it --rm --name docker-template -p 10022:22 docker-template:latest"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "docker build -t docker-template:latest ."
    },
    {
      "label": "start",
      "type": "shell",
      "command": "docker run -itd -p 10022:22 --hostname dev --name dev docker-template:latest"
    },
    {
      "label": "exec",
      "type": "shell",
      "command": "docker exec -it -u user -w ~ dev bash"
    }
  ]
}
